<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Password\n변경"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myinfo_passwd_btn"
            android:layout_weight="1" />

        <Button
            android:text="기관명\n변경"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myinfo_factory_btn"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text="Password 확인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:id="@+id/myinfo_passwd_text"
        android:layout_below="@+id/myinfo_id_confirm"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/myinfo_id_confirm"
        android:hint="ID확인"
        android:layout_below="@+id/myinfo_id_text"
        android:layout_alignStart="@+id/myinfo_passwd_confirm" />

    <TextView
        android:text="ID 확인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:id="@+id/myinfo_id_text"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/myinfo_passwd_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/myinfo_passwd_confirm"
        android:hint="패스워드 확인"
        android:layout_below="@+id/myinfo_passwd_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="확인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myinfo_passwd_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/myinfo_confrim_btn" />
</RelativeLayout>