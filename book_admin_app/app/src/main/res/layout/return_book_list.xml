<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:text="01012341234"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/return_item_phone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="홍길동"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:id="@+id/return_item_name"
        android:layout_alignBaseline="@+id/return_item_phone"
        android:layout_alignBottom="@+id/return_item_phone"
        android:layout_toEndOf="@+id/return_item_num" />

    <TextView
        android:text="고유번호"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:id="@+id/return_item_num"
        android:layout_alignBaseline="@+id/return_item_name"
        android:layout_alignBottom="@+id/return_item_name"
        android:layout_alignParentStart="true" />
</RelativeLayout>