<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="책 검색"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_search_btn"
        android:layout_above="@+id/admin_del_btn"
        android:layout_alignParentStart="true" />

    <Button
        android:text="책 추가"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_add_btn"
        android:layout_above="@+id/admin_search_btn"
        android:layout_alignParentStart="true" />

    <Button
        android:text="책 목록"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_list_btn"
        android:layout_above="@+id/admin_add_btn"
        android:layout_alignParentStart="true" />

    <Button
        android:text="책 삭제"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_del_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>