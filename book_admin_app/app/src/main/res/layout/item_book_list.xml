<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >


    <TextView
        android:text="책이름"
        android:textSize="9pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_list_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="저자"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_list_name"
        android:layout_alignParentStart="true"
        android:id="@+id/book_list_author" />

    <TextView
        android:text="출판사"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_list_author"
        android:layout_alignParentStart="true"
        android:id="@+id/book_list_publisher" />

    <TextView
        android:text="책 상태"
        android:textSize="12pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_list_state"
        android:layout_alignBaseline="@+id/book_list_author"
        android:layout_alignBottom="@+id/book_list_author"
        android:layout_toStartOf="@+id/book_list_btn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:id="@+id/book_list_btn"
        android:background="?android:attr/windowBackgroundFallback"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>