<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="대출 현황"
        android:textSize="12pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_loan_text"
        android:layout_alignStart="@+id/login_loan_text"
        android:id="@+id/login_loan_view" />

    <TextView
        android:text="대출 현황"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="29dp"
        android:id="@+id/login_loan_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="연체 현황"
        android:textSize="12pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_late_text"
        android:layout_alignStart="@+id/login_late_text"
        android:id="@+id/login_late_view" />

    <Button
        android:text="대출 하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_loan_btn"
        android:layout_weight="1"
        android:layout_above="@+id/login_return_btn"
        android:layout_alignStart="@+id/login_return_btn" />

    <Button
        android:text="책 관리"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_book_admin_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="반납하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_return_btn"
        android:layout_weight="1"
        android:layout_above="@+id/login_state_btn"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="현황 확인"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_state_btn"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="연체 현황"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/login_late_text"
        android:layout_below="@+id/login_loan_view"
        android:layout_alignStart="@+id/login_loan_view" />
</RelativeLayout>